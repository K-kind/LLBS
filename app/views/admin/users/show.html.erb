<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header">
	                	<div class="form-header text-center">
	                    	<h2 class="form-header-title"><%= @user.name %>さんのマイページ</h2><br>
	                    </div>
	                    <%= attachment_image_tag @user, :image, size: "200x200", format: 'jpeg', fallback: "no_image.jpg" %>
                    	<table class="table table-bordered">
                          	<tbody>
                          		<tr>
		                            <th class="active">名前</th>
		                            <td><%= @user.name %></td>
		                        </tr>
	                            <tr>
		                            <th class="active">Twitter</th>
		                            <td>@<%= @user.nickname %></td>
		                        </tr>
		                        <tr>
		                            <th class="active">メールアドレス</th>
		                            <td><%= @user.email %></td>
		                        </tr>
		                        <tr>
		                            <th class="active">自己紹介</th>
		                            <td><%= @user.introduction %></td>
		                        </tr>
		                    </tbody>
		                </table>
						<%= link_to "編集する", edit_admin_user_path(@user) %>
						<div class=clearfix>
						</div>

							<h3>参加イベント一覧</h3>
							<% @event_users.each do |event_user| %>
								<h4><%= event_user.event.event_name %></h4>
								<%= event_user.event.meeting_time %>〜<%= event_user.event.finish_time %><br>
								<%= link_to"参加を取り消す", event_event_user_path(event_id: event_user.event.id, event_user_id: event_user.id), method: :delete, class: "btn btn-danger w-50" %><br>
							<% end %>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>