<%= render 'events/event-header', event: @event, event_users: @event_users %>
<div class="event-container">
	<div class="col-xs-3">
		<div class="text-center">
		<%= attachment_image_tag @event, :image, size: "200x200", format: 'jpeg', fallback: "no_image.jpg", class:"img-thumbnail" %>
		</div>
	</div>
	<div class="col-xs-9">
		<table class="table table-bordered">
			<tbody>
			    <tr>
			        <th class="active text-right">会場</th>
			        <td><%= link_to "#{@event.place}", @event.place_url %></td>
			    </tr>
			    <tr>
			        <th class="active text-right">集合時間</th>
			        <td><%= @event.meeting_time.to_s(:time) %></td>
			    </tr>
			    <tr>
			        <th class="active text-right">演奏時間</th>
			        <td><%= @event.start_time.to_s(:time) %>〜<%= @event.finish_time.to_s(:time) %></td>
			    </tr>
			    <tr>
			        <th class="active text-right">参加費</th>
			        <td>演奏参加：<%= @event.performance_fee %>円　見学参加：<%= @event.visit_fee %>円</td>
			    </tr>
			    <tr>
			        <th class="active text-right">打ち上げ会場</th>
			        <td><%= link_to "#{@event.after_party.party_place}", @event.after_party.party_url %></td>
			    </tr>
			</tbody>
		</table>
		<div class="text-right">
			<%= link_to '打ち上げ詳細', event_party_path(@event.friendly_url), class:"btn btn-lg btn-warning" %> 
			<%= link_to "参加者一覧", event_event_users_path(@event.friendly_url), class:"btn btn-lg btn-info" %>
		</div>
	</div>
</div>

<div class="clearfix">
</div>

<div class="col-xs-12">
 	<div class="panel panel-default">
    	<div class="panel-heading">イベント概要</div>
    	<div class="panel-body"><%= @event.overview %></div>
	</div>
</div>

<h3>楽曲一覧</h3>
<br>
<h4>成立曲 (<%= @complete_musics.count %>曲)</h4>
<%= render 'events/entrytable', parts: @parts, event: @event, entry_tables: @entry_tables, event_users: @event_users, musics: @complete_musics %>

<br>
<h4>未成立曲 (<%= @incomplete_musics.count %>曲)</h4>
<%= render 'events/entrytable', parts: @parts, event: @event, entry_tables: @entry_tables, event_users: @event_users, musics: @incomplete_musics %>

<%= link_to "曲を追加する", new_event_music_path(@event.id), class: "btn btn-lg btn-primary btn-block" %>
<br>